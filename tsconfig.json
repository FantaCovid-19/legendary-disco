{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",

    "strict": true,
    "noImplicitAny": true,
    "declaration": false,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,

    "outDir": "dist",

    "baseUrl": ".",
    "paths": {
      "#structures/*": ["src/structures/*"],
      "#utils/*": ["src/utils/*"],
      "#models/*": ["src/models/*"]
    }
  },

  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "src/**/*.test.ts"]
}
